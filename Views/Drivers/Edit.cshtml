@model CarPark.Models.Driver

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnterpriseId" class="control-label">Enterprise</label>
                <select asp-for="EnterpriseId" class="form-control" asp-items="ViewBag.Enterprises"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedVehiclesIds" class="control-label">Vehicles</label>
                <select asp-for="SelectedVehiclesIds" multiple="multiple" class="form-control" asp-items="ViewBag.Vehicles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
