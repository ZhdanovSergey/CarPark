@model CarPark.Models.Vehicle

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaceDateTimeOffset)
        </dt>
        <dd class="col-sm-10" data-date="@Model.PurchaceDateTimeOffset.ToString("yyyy-MM-ddTHH:mm:ss.fffzzz")"></dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enterprise)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enterprise.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mileage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mileage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            Drivers
        </dt>
        <dd class="col-sm-10">
            @foreach (var driverName in Model.DriversVehicles.Select(m => m.Driver.Name))
            {
                <span>@driverName; </span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActiveDriver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActiveDriver.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>

@if (Model.Locations.Count > 0)
{
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Locations[0].DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Locations[0].Point)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Model.Locations)
            {
                <tr>
                    <td>
                        @location.DateTime
                    </td>
                    <td>
                        @location.Point
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.Partial("_DateWithLocalShift")
}