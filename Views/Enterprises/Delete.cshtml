@model CarPark.Models.Enterprise

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enterprise</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeZoneId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeZoneId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Drivers)
        </dt>
        <dd class="col-sm-10">
            @foreach (var driverName in Model.Drivers.Select(d => d.Name))
            {
                <span>@driverName; </span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var vehicleNumber in Model.Vehicles.Select(d => d.RegistrationNumber))
            {
                <span>@vehicleNumber; </span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
