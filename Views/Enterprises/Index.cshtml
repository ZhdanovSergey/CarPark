@model IEnumerable<CarPark.Models.Enterprise>

<h4>Enterprises</h4>
<hr />
@if (User.IsInRole(RoleNames.Admin))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>    
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @foreach (var driverName in item.Drivers.Select(d => d.Name))
                    {
                        <span>@driverName; </span>
                    }
                </td>
                <td>
                    @foreach (var vehicleNumber in item.Vehicles.Select(v => v.RegistrationNumber))
                    {
                        <span>@vehicleNumber; </span>
                    }
                </td>
                <td>
                    @if (User.IsInRole(RoleNames.Admin))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole(RoleNames.Admin))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                        
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
